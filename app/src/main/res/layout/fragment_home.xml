<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPagerHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </android.support.v4.view.ViewPager>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/Dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

<!--Gone-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout

                    android:id="@+id/kiri"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardPromo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:paddingBottom="10dp"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/baru"
                                android:layout_marginBottom="5dp"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Promo Saat Ini"
                                android:layout_below="@+id/img1"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_package"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/prewed"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Package"
                                android:layout_below="@+id/img2"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/gallery"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gallery"
                                android:layout_below="@+id/img4"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tengah"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_photo_studio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:paddingBottom="10dp"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/camera"
                                android:layout_marginBottom="5dp"/>

                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Photo Studio"
                                android:layout_below="@+id/img3"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_preweding"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp">

                            <ImageView
                                android:id="@+id/img5"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/clock" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/img5"
                                android:text="Prewedding"
                                android:textAlignment="center"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_video"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/img8"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/video"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Video"
                                android:layout_below="@+id/img8"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/kanan"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:id="@+id/card_makeup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/img9"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/makeup"/>

                            <TextView
                                android:id="@+id/tv_card_makeup"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Make UP Wardrobe"
                                android:layout_below="@+id/img9"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp"/>
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card_weding"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/img7"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/weding"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true" />
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wedding"
                                android:layout_below="@+id/img7"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card_tentang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >
                            <ImageView
                                android:id="@+id/img6"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:paddingTop="5dp"
                                android:src="@drawable/tentang"/>
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tentang Kami"
                                android:layout_below="@+id/img6"
                                android:textColor="@color/ebony_clay"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>
<!--end gone-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>