<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_p_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:id="@+id/imgPemesananDetail"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/paket3"
                    android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_p_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/title_pesanan"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pesanan Anda "
                        />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/title_pesanan"
                        android:background="@color/lines"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/txtPaketDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="monospace"
                        android:paddingLeft="10dp"
                        android:text="Paket 1"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/view"/>

                    <TextView
                        android:id="@+id/txtHargaItemDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingRight="10dp"
                        android:text="0"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_toRightOf="@+id/txtPaketDetail"
                        android:layout_below="@+id/view"
                        android:fontFamily="monospace"
                        />

                    <TextView
                        android:id="@+id/txt_text_jumlah_org"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtPaketDetail"
                        android:text="Jumlah Standart"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/vl_jumlah_pesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 orang"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/txtPaketDetail"
                        android:layout_toRightOf="@+id/txt_text_jumlah_org"
                        />

                    <TextView
                        android:id="@+id/txt_text_jumlah_tambahan_org"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_text_jumlah_org"
                        android:text="Jumlah Tambahan /(Org)"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/jmlPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:text="0"
                        android:layout_below="@+id/vl_jumlah_pesan"
                        android:layout_toRightOf="@+id/txt_text_jumlah_tambahan_org"
                        android:padding="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        />


                    <ImageButton
                        android:id="@+id/btnMin"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_minus"
                        style="?android:buttonBarButtonStyle"
                        android:background="?attr/selectableItemBackground"
                        android:layout_alignTop="@+id/jmlPlus"
                        android:layout_toStartOf="@+id/btnPlus"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        />

                    <ImageButton
                        android:id="@+id/btnPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_plus"
                        android:background="?attr/selectableItemBackground"
                        style="?android:buttonBarButtonStyle"
android:visibility="gone"
                        android:layout_alignTop="@+id/btnMin"
                        android:layout_alignParentEnd="true" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_p_tree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Keterangan"/>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lines"
                        android:layout_below="@+id/txt_pp"/>

                    <TextView
                        android:id="@+id/txtDeskripsiItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:text="Deskripsi"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_p_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_pp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="Detail Pembayaran"
                        />

                    <View
                        android:id="@+id/line_pp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lines"
                        android:layout_below="@+id/txt_pp"/>

                    <TextView
                        android:id="@+id/txt_hrg_pp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Harga"
                        android:layout_below="@+id/line_pp"
                        />

                    <TextView
                        android:id="@+id/txt_hrg_tmbh_pp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Tambahan Biaya"
                        android:layout_below="@+id/txt_hrg_pp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_jml_pp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="000000"
                        android:layout_below="@+id/line_pp"
                        android:layout_toRightOf="@+id/txt_hrg_pp"
                        android:gravity="end"
                        android:paddingRight="10dp"
                        />

                    <TextView
                        android:id="@+id/txt_jml_tmbh_pp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="0"
                        android:layout_below="@+id/txt_hrg_pp"
                        android:layout_toRightOf="@+id/txt_hrg_tmbh_pp"
                        android:gravity="end"
                        android:paddingRight="10dp"
                        android:visibility="gone"
                        />

                    <View
                        android:id="@+id/line_pp2"
                        android:layout_width="352dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="1dp"
                        android:background="@color/lines"
                        android:layout_below="@+id/txt_jml_tmbh_pp"/>

                    <TextView
                        android:id="@+id/txt_total_jml_pp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="Total (Tunai)"
                        android:padding="10dp"
                        android:layout_below="@+id/line_pp2"/>

                    <TextView
                        android:id="@+id/txt_hasil_final_pp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="0"
                        android:padding="10dp"
                        android:layout_below="@+id/line_pp2"
                        android:layout_toRightOf="@+id/txt_total_jml_pp"
                        android:gravity="end"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="Penambahan orang akan dikenakan biaya penambahan sebesar 10.000 Rupiah"

                />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:alpha="1"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/img_ker_pp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_keranjang"
            android:padding="7dp"
            android:layout_margin="5dp"/>

        <View
            android:id="@+id/line_pp3"
            android:layout_gravity="center_vertical"
            android:layout_width="1.5dp"
            android:layout_height="40dp"
            android:background="@color/lines"
            android:layout_toRightOf="@+id/img_ker_pp"/>

        <TextView
            android:id="@+id/txt_caution_pp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/line_pp3"
            android:text="Perkiraan Harga"
            android:textColor="@color/aice_blue"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="120dp"/>

        <TextView
            android:id="@+id/txt_harga_final_bawah_pp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1,000,000"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/aice_blue"
            android:layout_toRightOf="@+id/line_pp3"
            android:layout_below="@+id/txt_caution_pp"
            android:layout_marginRight="120dp"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Pesan"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/ripple_effect_bg_white"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>


</RelativeLayout>


