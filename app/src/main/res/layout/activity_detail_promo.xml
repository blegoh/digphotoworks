<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nm_paket_detail_promo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="pakset"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam blandit nec sapien eget tincidunt. Nunc quis nisl semper, tincidunt tellus ut, ultricies nunc. Aliquam erat volutpat. Duis vitae nulla elit. Curabitur elementum lorem at feugiat elementum. Nunc arcu quam, ultrices luctus sodales quis, facilisis vitae lacus. Integer in lectus vel nibh sollicitudin faucibus. Cras in gravida tortor. Morbi et feugiat libero. Quisque pellentesque vulputate metus, sit amet scelerisque velit sodales et. Fusce vestibulum mi ut justo vehicula consectetur suscipit eu arcu."
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Lihat info lengkapnya di bawah ini."
                        android:layout_marginBottom="30dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/border_tv_promo"
                        android:text="Periode Promo 10 - 15 Desember 2017"
                        android:textAlignment="center"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Harga"/>

                    <TextView
                        android:id="@+id/tvHarga_promo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:text="200.000"
                        android:layout_margin="10dp"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/diskon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="DAFTAR PROMO "
                                android:textAllCaps="true"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_nomor"
                                android:text="1. Gratis Foto 5X Ganti Baju."
                                android:padding="5dp"
                                android:layout_below="@id/diskon"
                                android:inputType="text|textMultiLine"
                                android:maxLines="20"
                                android:ems="10"
                                />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2. 5 Edit dan Cetak 4R"
                                android:padding="5dp"
                                android:layout_below="@id/diskon"
                                android:layout_toRightOf="@id/tv_nomor"
                                android:inputType="text|textMultiLine"
                                android:maxLines="20"
                                android:ems="10"/>

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3. Makan Gratis"
                                android:padding="5dp"
                                android:layout_below="@id/diskon"
                                android:layout_toRightOf="@id/tv_nomor"
                                android:inputType="text|textMultiLine"
                                android:maxLines="20"
                                android:ems="10"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="4. Dikasih Uang dari DiG Photoworks"
                                android:padding="5dp"
                                android:layout_below="@id/diskon"
                                android:inputType="text|textMultiLine"
                                android:maxLines="20"
                                android:ems="10"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5. Dikasih Pesangon Setelah Foto."
                                android:padding="5dp"
                                android:layout_below="@id/diskon"
                                android:inputType="text|textMultiLine"
                                android:maxLines="20"
                                android:ems="10"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <Button
                        android:id="@+id/btnPesanPromo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ripple_effect"
                        android:text="Langsung Pesan"
                        android:textColor="@color/white"
                        android:visibility="gone"/>
                </LinearLayout>
            </ScrollView>


</RelativeLayout>


